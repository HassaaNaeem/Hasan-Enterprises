# MongoDB connection string
MONGO_URI=mongodb://localhost:27017/hasan_enterprises_db

# JWT / session secret used to sign tokens
SESSION_SECRET=replace_with_strong_secret

# Server
PORT=5000
NODE_ENV=development

# Optional: base url for frontend (used for docs/testing)
API_BASE_URL=http://localhost:5000/api

# Notes:
# - The backend currently issues JWTs without explicit expiry (no `expiresIn` used).
# - Frontend should store token in memory and/or rely on httpOnly cookie set by server.
